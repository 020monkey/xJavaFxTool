<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xwintop.xJavaFxTool.controller.epmsTools.gatewayConfTool.GatewayConfToolController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <left>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label text="配置目录：" />
                        <TextField fx:id="configurationPathTextField" />
                                <Button fx:id="treeRefurbishButton" mnemonicParsing="false" onAction="#treeRefurbishAction" text="刷新" />
                     </children>
                  </HBox>
                        <TreeView fx:id="configurationTreeView" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TreeView>
                    </children>
                </VBox>
            </left>
            <center>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                        <TabPane fx:id="taskConfigTabPane" tabClosingPolicy="ALL_TABS">
                            <tabs>
                                <Tab closable="false" text="Task任务浏览">
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </VBox>
            </center>
         <top>
            <HBox alignment="CENTER" prefHeight="30.0" spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="服务器地址：" />
                  <TextField fx:id="hostTextField" text="127.0.0.1" />
                  <Label text="端口：" />
                  <TextField fx:id="portTextField" prefHeight="23.0" prefWidth="44.0" text="22" />
                  <Label text="用户名：" />
                  <TextField fx:id="usernameTextField" />
                  <Label text="密码：" />
                  <TextField fx:id="passwordTextField" />
                  <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connectAction" text="连接" />
               </children>
            </HBox>
         </top>
        </BorderPane>
    </children>
</AnchorPane>
